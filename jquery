<head>  
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>  
<script>  
$(document).ready(function(){  
    $(".B1").click(function(){  
        $("#div1").fadeIn();  
        $("#div2").fadeIn("slow");  
        $("#div3").fadeIn(3000);  
    
    });
        $(".B2").click(function(){  
   
        $("#div4").fadeOut();  
        $("#div5").fadeOut("slow");  
        $("#div6").fadeOut(2000);  
    }); 
    $(".B3").click(function(){  
        $("#div7").fadeToggle();  
        $("#div8").fadeToggle("slow");  
        $("#div9").fadeToggle(2000);  
    });  
    $(".B4").click(function(){  
        $("#div10").fadeTo("slow", 0.3);  
        $("#div11").fadeTo("slow", 0.4);  
        $("#div12").fadeTo("slow", 0.5);  
    });  
    $("#flip").click(function(){  
        $("#panel").slideDown("slow");  
    }); 
      
    $("#flip2").click(function(){  
        $("#panel2").slideUp("slow");  
    });  
    $("#flip3").click(function(){  
        $("#panel3").slideToggle("slow");  
    });  
    
});
</script>
<style>
   
#panel, #flip {  
    padding: 5px;  
    text-align: center;  
    background-color: #b6dbdb;  
    border: solid 1px #000000;  
}  
#panel {  
    padding: 50px;  
    display: none;  
}  
#panel2, #flip2 {  
    padding: 5px;  
    text-align: center;  
    background-color: #c2ca51;  
    border: solid 1px #000000;  
}  
#panel2 {  
    padding: 50px;  
}  
#panel3, #flip3 {  
    padding: 5px;  
    text-align: center;  
    background-color: #ff9900;  
    border: solid 1px #c3c3c3;  
}  
#panel3 {  
    padding: 50px;  
    display:none;  
}  

</style>  
   

</head>  
